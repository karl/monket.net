
extends layout

block prepend title
  | #{ page.title + ' - '}

block content
  article.article
    header
      h2
        a(href=page.url)= page.title
      if moment.utc(page.date).unix() > 0
        p.date
          span= moment.utc(page.date).format('DD. MMMM YYYY')
    section.content!= typogr(page.html).typogrify()

block prepend footer
  div.nav
    a(href=contents.index.url) Full blog
